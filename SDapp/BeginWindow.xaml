<Window x:Class="SoftwareDesign_2017.BeginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftwareDesign_2017"
        mc:Ignorable="d"
        Title="BeginWindow" Height="320" Width="450" ResizeMode="CanMinimize">
  <Window.Resources>
    
  </Window.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="55*" />
      <RowDefinition Height="45*" />
    </Grid.RowDefinitions>
    <Grid Grid.Row="0" x:Name="background" Background ="{StaticResource linearBrushBlue}" >
      <Image HorizontalAlignment="Left" Height="100" Margin="175,110,0,-50" VerticalAlignment="Top" Width="100" Source="images/hui.jpg"/>
    </Grid>
    <Canvas Grid.Row="1">
      <Button Content="开始使用" Canvas.Left="165" Canvas.Top="73" Width="120" Height="30" Template="{StaticResource ringButton}" Background="#FF58DEC0" Foreground="Black" Click="Button_Click" />      
    </Canvas>
  </Grid>
</Window>
