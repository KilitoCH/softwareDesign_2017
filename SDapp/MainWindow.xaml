<Window x:Class="SoftwareDesign_2017.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftwareDesign_2017"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="720">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="69*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="para_input" Content="请输入参数" 
               HorizontalAlignment="Left" Height="27" Margin="19,38,0,0" BorderBrush="Black" VerticalAlignment="Top" Width="118" Grid.RowSpan="11" FontFamily="YouYuan" Background="White"/>
        <GridSplitter x:Name="mainSplitter" HorizontalAlignment="Left" Margin="149,0,0,0" Width="1" Background="Black"/>
        <TextBox HorizontalAlignment="Left" Height="32" Margin="19,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118" BorderBrush="#FF060606" SelectionBrush="#FF0662AC"/>
        <TabControl Grid.Column="1" HorizontalAlignment="Left" Height="469" VerticalAlignment="Top" Width="552">
            <TabItem  Header="TabItem">
                <Grid x:Name="tabItem1_grid" Width="500" Height="400" Background="#FFECE8E8" Margin="0,0,48,40">
                    <local:DrawingCanvas x:Name="tabItem1_canvas" Background="#FFFFFF" Width="500" Height="300">
                        <local:DrawingCanvas.Children>
                            <Line X1="10" Y1="300" X2="450" Y2="300" Stroke="Black" />
                            <Line X1="10" Y1="300" X2="10" Y2="10" Stroke="Black" />                        
                        </local:DrawingCanvas.Children>
                    </local:DrawingCanvas>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5" x:Name="tabItem2_grid" Width="500" Height="400" Margin="0,0,48,40">
                    <local:DrawingCanvas x:Name="tabItem2_canvas" Background="#FFFFFF" Width="500" Height="300">
                        <local:DrawingCanvas.Children>
                            <Line X1="10" Y1="300" X2="450" Y2="300" Stroke="Black" />
                            <Line X1="10" Y1="300" X2="10" Y2="10" Stroke="Black" />
                        </local:DrawingCanvas.Children>
                    </local:DrawingCanvas>
                </Grid>
            </TabItem>
        </TabControl>
        <Label HorizontalAlignment="Left" Height="139" Margin="19,300,0,0" VerticalAlignment="Top" Width="100" BorderBrush="Black" BorderThickness="2px" Content=""/>
    </Grid>
</Window>
